- total     = current_user.total_for_month(:date => @date)
- average   = current_user.daily_average_for_month(:date => @date)
- prevision = current_user.prevision_for_month(:date => @date, :wage => 1500) #TODO: extract this somewhere
- left      = current_user.left_for_month(:date => @date, :wage => 1500)

.row   
  .span6
    #tabs
      %ul{:class => "nav nav-tabs"} 
        %li.active
          %a{:href => "#tabs-1", :'data-toggle' => "tab" } Statistics
        %li
          %a(href="#tabs-2") Daily chart
        %li
          %a(href="#tabs-3") Categories chart


      #myTabContent.tab-content
        #tabs-1.tab-pane.fade.in.active
          = render :partial => 'layouts/statistics', :locals => {:total => total, :average => average, :prevision => prevision, :left => left }
        #tabs-2.tab-pane.fade
          %img{:src => Expense.generate_daily_chart_for(@date) }
        #tabs-3.tab-pane.fade
          %img{:src => Expense.generate_expenses_pie_chart(@date) }
      
  .span6
    = render :partial => 'tag_cloud'