<% categories = options_for_select(Category.all.map { |category| [category.name, category.id ] }, 0 ) %>

<h1>Editing expense</h1>

<% form_for(@expense) do |f| %>
  <%= f.error_messages %>
	<p>
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.label :category %><br />
    <%= f.select :category_id, categories %>
  </p>
  <p>
    <%= f.label :bancomat %><br />
    <%= f.check_box :bancomat %>
  </p>
  <p>
    <%= f.label :ufficio %><br />
    <%= f.check_box :ufficio %>
  </p>
  <p>
    <%= f.label :buoni %><br />
    <%= f.text_field :buoni %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @expense %> |
<%= link_to 'Back', expenses_path %>
