#main-container.row
  - model_class = Account
  .page-header
    %h1=t '.title', :default => model_class.model_name.human.pluralize
  %table.table.table-striped
    %thead
      %tr
        %th= model_class.human_attribute_name(:name)
        %th= model_class.human_attribute_name(:description)
        %th=t '.actions', :default => t("helpers.actions")
    %tbody
      - @accounts.each do |account|
        %tr
          %td= link_to account.name, account_path(account)
          %td= account.description
          %td
            = link_to t('.edit', :default => t("helpers.links.edit")), edit_account_path(account), :class => 'btn btn-mini'
            = link_to t('.destroy', :default => t("helpers.links.destroy")), account_path(account), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

  = link_to t('.new', :default => t("helpers.links.new")), new_account_path, :class => 'btn btn-primary'
