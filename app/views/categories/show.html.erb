<p>
  <b>Name:</b>
  <%=h @category.name %>
</p>

<h3>This year progress:</h3>

<table border="0" cellspacing="5" cellpadding="5">
	<tr>
		<% 1.upto(12) do |month| %>
			<th><%= month %></th>
		<% end %>
	</tr>
	<tr>
		<% 1.upto(12) do |month| %>
			<td><%= @totals[month - 1] %></td>
		<% end %>
	</tr>
</table>

<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>