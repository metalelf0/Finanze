<h1>Editing movement</h1>

<% form_for(@movement) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :from_account_id %><br />
    <%= f.text_field :from_account_id %>
  </p>
  <p>
    <%= f.label :to_account_id %><br />
    <%= f.text_field :to_account_id %>
  </p>
  <p>
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </p>
  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @movement %> |
<%= link_to 'Back', movements_path %>